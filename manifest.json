{
  "manifest_version": 2,
  "name": "JP Hover Translate",
  "version": "0.1",
  "description": "Hover to translate Japanese text using Gemini API",
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "applications": {
    "gecko": { "id": "jp-hover-translate@local" }
  }
}
