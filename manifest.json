{
  "manifest_version": 2,
  "name": "Quick Translate to Vietnamese",
  "version": "2.0.0",
  "description": "Alt+Select to translate any language to Vietnamese using Gemini AI",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "quick-translate-vi@extension.local",
      "strict_min_version": "109.0"
    }
  }
}
